<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.ubs.eugene</groupId>
    <artifactId>parent</artifactId>
    <version>0.1-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>eugene</name>
    <description>Eugene - Agent-Based Market Simulator for System Testing of Trading Algorithms</description>

    <repositories>
        <repository>
            <id>ops4j.releases</id>
            <name>The OPS4J Release Repository</name>
            <url>http://repository.ops4j.org/maven2/</url>
        </repository>
    </repositories>

    <properties>
        <current.version>0.1-SNAPSHOT</current.version>
        <java.version>1.6</java.version>
        <pax.runner.version>1.7.5</pax.runner.version>
        <pax.confman.version>0.2.2</pax.confman.version>
        <maven.compiler.version>2.3.2</maven.compiler.version>
        <maven.assembly.version>2.2.1</maven.assembly.version>
        <maven.bundle.version>2.3.5</maven.bundle.version>
        <maven.clean.version>2.4.1</maven.clean.version>
        <pax.version>1.5</pax.version>
        <jade.version>1.2.0</jade.version>
        <osgi.version>1.0</osgi.version>
        <org.osgi.service.http.port>8080</org.osgi.service.http.port>
        <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
        <jade.gui>true</jade.gui>
    </properties>

    <modules>
        <module>eugene-hello</module>
        <module>eugene-hello-dist</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.ops4j</groupId>
                <artifactId>maven-pax-plugin</artifactId>
                <version>${pax.version}</version>
                <configuration>
                    <provision>
                        <param>--platform=equinox</param>
                    </provision>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.compiler.version}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
